<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Light border (top/left highlight) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>
    <!-- Dark border (bottom/right shadow) -->
    <item
        android:left="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
        </shape>
    </item>
    <!-- Inner shadow -->
    <item
        android:bottom="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/win95_dark_gray" />
        </shape>
    </item>
    <!-- Gray fill -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/win95_gray" />
        </shape>
    </item>
</layer-list>
