<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark border (top/left - inset shadow) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/win95_dark_gray" />
        </shape>
    </item>
    <!-- Light border (bottom/right - inset highlight) -->
    <item
        android:left="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>
    <!-- White fill -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>
