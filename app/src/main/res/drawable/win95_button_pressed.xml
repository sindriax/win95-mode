<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark border (top/left - inverted for pressed) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/win95_dark_gray" />
        </shape>
    </item>
    <!-- Light border (bottom/right - inverted for pressed) -->
    <item
        android:left="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>
    <!-- Gray fill (slightly darker when pressed) -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/win95_gray" />
        </shape>
    </item>
</layer-list>
