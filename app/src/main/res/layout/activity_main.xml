<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/win95_teal"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/win95_gray"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/win95_navy"
            android:padding="4dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_my_computer"
                android:contentDescription="@string/app_icon_desc" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/win95_gray"
                android:gravity="center"
                android:text="@string/close_button"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/win95_gray">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_title"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/icon_preview"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_my_computer"
                    android:layout_margin="8dp"
                    android:contentDescription="@string/my_computer" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_recycle_bin"
                    android:layout_margin="8dp"
                    android:contentDescription="@string/recycle_bin" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_explorer"
                    android:layout_margin="8dp"
                    android:contentDescription="@string/explorer" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_paint"
                    android:layout_margin="8dp"
                    android:contentDescription="@string/paint" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/win95_dark_gray"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wallpapers"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/wall_teal"
                    android:layout_width="56dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/wall_teal"
                    android:layout_margin="4dp"
                    android:background="@color/win95_dark_gray"
                    android:padding="2dp"
                    android:contentDescription="@string/wall_teal_desc" />

                <ImageView
                    android:id="@+id/wall_clouds"
                    android:layout_width="56dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/wall_clouds"
                    android:layout_margin="4dp"
                    android:background="@color/win95_dark_gray"
                    android:padding="2dp"
                    android:contentDescription="@string/wall_clouds_desc" />

                <ImageView
                    android:id="@+id/wall_setup"
                    android:layout_width="56dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/wall_setup"
                    android:layout_margin="4dp"
                    android:background="@color/win95_dark_gray"
                    android:padding="2dp"
                    android:contentDescription="@string/wall_setup_desc" />

                <ImageView
                    android:id="@+id/wall_stars"
                    android:layout_width="56dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/wall_stars"
                    android:layout_margin="4dp"
                    android:background="@color/win95_dark_gray"
                    android:padding="2dp"
                    android:contentDescription="@string/wall_stars_desc" />

                <ImageView
                    android:id="@+id/wall_matrix"
                    android:layout_width="56dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/wall_matrix"
                    android:layout_margin="4dp"
                    android:background="@color/win95_dark_gray"
                    android:padding="2dp"
                    android:contentDescription="@string/wall_matrix_desc" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tap_wallpaper"
                android:textColor="@color/win95_dark_gray"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/win95_dark_gray"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/how_to_apply"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/apply_instructions"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/supported_launchers"
                android:textColor="@color/win95_dark_gray"
                android:textSize="11sp"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
